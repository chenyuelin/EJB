<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="JPATestDB" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>java:jboss/datasources/xalocaltest</jta-data-source>
		<class>name.chenyuelin.ejb.demo.sample.model.T1</class>
		
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<shared-cache-mode>DISABLE_SELECTIVE</shared-cache-mode>
		<validation-mode>NONE</validation-mode>
		
		<properties>
			<!-- <property name="jboss.as.jpa.providerModule" value="org.eclipse.persistence" />
			<property name="jboss.as.jpa.adapterModule" value="xxxxxx" />
			<property name="jboss.as.jpa.adapterClass" value="org.eclipse.persistence.jpa.PersistenceProvider" />-->
			
			<property name="eclipselink.target-server" value="JBoss"/>
			<!-- https://www.eclipse.org/eclipselink/documentation/2.5/jpa/extensions/p_target_server.htm#target-server
			value="Default" -->
			
			<!-- 
			Due to EclipseLink bug 383199, applications that use the static metamodel should set:
			https://developer.jboss.org/wiki/HowToUseEclipseLinkWithAS7
    		<property name="eclipselink.deploy-on-startup" value="True" />
     		-->
    
			<property name="eclipselink.logging.level" value="INFO" />
			<property name="eclipselink.logging.level.sql" value="ALL" />
			<property name="eclipselink.logging.parameters" value="true" />
		</properties>
	</persistence-unit>
</persistence>
